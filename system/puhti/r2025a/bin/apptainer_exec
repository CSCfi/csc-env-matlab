#!/bin/bash

# Increase virtual memory to the hard limit (required on login nodes).
ulimit -v "$(ulimit -Hv)"

# Exec matlab container
apptainer --silent exec --bind="/users,/projappl,/scratch,$TMPDIR,$LOCAL_SCRATCH,/fmi,/appl/data,/run,/appl/soft/math/mathworksservicehost" --nv "$MATLAB_SING_IMAGE" "$@"
