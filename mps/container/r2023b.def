Bootstrap: localimage
From: ./base/ubuntu_22.04.sif

%files
    ./mps/build/r2023b /opt/matlab
    ./mps/container/mpiLibConf.m /opt/matlab/toolbox/local/mpiLibConf.m

%post
    chmod -R u=rwX,g=rX,o=rX /opt/matlab
    mkdir -p /appl/soft/math/matlab/mps
    ln -sf /opt/matlab /appl/soft/math/matlab/r2023b
    ln -sf /opt/matlab /appl/soft/math/matlab/mps/r2023b
