#!/bin/bash

# MATLAB executes this script directly, hence we load the module here.
export MATLAB="/opt/matlab"
export SING_IMAGE="/appl/soft/math/matlab/mps/r2023b/matlab.sif"

# Use the worker from the container
export PARALLEL_SERVER_MATLAB_EXE="$MATLAB/bin/worker"

# Call matlab with the right arguments
/appl/opt/csc-cli-utils/bin/apptainer_wrapper exec "$MATLAB/bin/mw_mpiexec" "$@"
